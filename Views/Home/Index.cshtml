@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" type="image/png" sizes="32x32" href="./images/favicon-32x32.png">
    <script src="https://kit.fontawesome.com/yourcode.js"></script>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <style>
        * {
            box-sizing: border-box;
        }

       .row {
            position: absolute;
            background-color: hsl(229, 57%, 11%);
            width: 100%;
            height:650px;
        }
        .ust {
            position:absolute;
            background-color: hsl(229, 57%, 11%);
            height: 300px;
            width: 100%;
        }
        .alt {
            position:absolute;
            background-image: url('../../img/bg-desktop.png');
            width: 100%;
            height: 300px;
            margin-top:300px;
        }
        .sol {
            position: absolute;
            float: left;
            background-color: hsl(228, 56%, 26%);
            padding-top: 10px;
            padding-left:30px;
            padding-bottom:30px;
            padding-right:30px;
            margin-top: 200px;
            margin-left: 260px;
            width: 23%;
            border-top-right-radius: 80px;
            border-top-left-radius: 7px;
            border-bottom-right-radius:7px;
            border-bottom-left-radius: 7px;
        }
        .sag {
            position: absolute;
            float: left;
            background-color: hsl(228, 56%, 26%);
            padding-top: 20px;
            padding-bottom:40px;
            margin-top: 260px;
            margin-left: 650px;
            width: 35%;
            border-top-right-radius: 7px;
            border-top-left-radius: 7px;
            border-bottom-right-radius: 7px;
            border-bottom-left-radius: 7px;
        }
        .sagust {
            position: absolute;
            background-color: white;
            padding: 5px;
            width: 10%;
            margin-top: 230px;
            margin-left: 920px;
            text-align: center;
            border-radius: 7px;
            border-radius: 7px;
        }
        .sagalt2 {
            position: absolute;
            background-color: hsl(229, 57%, 11%);
            margin-top:4px;
            margin-left:30px;
            padding: 6px;
            width:80%;
            border-radius: 10px;
        }
        .sagalt3 {
            position: absolute;
            background-image: linear-gradient(to right, #ffa399,#ff4d97);
            width:60%;
            padding: 4px;
            margin-top:6px;
            margin-left:32px;
            border-radius: 10px;
        }

        .sagalt6 {
            position: absolute;
            color: white;
            margin-top:-1px;
            margin-left:293px;
        }
        @@media only screen and (max-width:600px) {
            .ust,.alt{
                background-image: url('../../img/bg-mobile.png');
            }
            .row{
                padding:3px;
                width:375px;
            }
            .sol{
                position:relative;
                width: 100%;
                padding-top:1px;
                padding-left: 3px;
                padding-bottom: 3px;
                padding-right: 3px;
                margin-top: 2px;
                margin-left:2px;
                border-top-right-radius: 80px;
                border-top-left-radius: 7px;
                border-bottom-right-radius: 7px;
                border-bottom-left-radius: 7px;
            }
            .sag {
                position:relative;
                width:100%;
                padding-top: 1px;
                padding-left: 3px;
                padding-bottom: 3px;
                padding-right: 3px;
                margin-top:10px;
                margin-left: 2px;
                border-top-right-radius: 80px;
                border-top-left-radius: 7px;
                border-bottom-right-radius: 7px;
                border-bottom-left-radius: 7px;
            }
            .sagust {
                position: absolute;
                background-color: white;
                padding: 5px;
                width: 50%;
                margin-top: 230px;
                margin-left: 92px;
                text-align: center;
                border-radius: 7px;
                border-radius: 7px;
            }
        }
    </style>
</head>

<body>
    <div class="row">
        <div class="ust">
        </div>
        <div class="alt">
        </div>
        <div class="sol">
            <div style="margin-top:20px;padding-top:10px;">
                <img src="~/img/logo.svg" />
            </div>
            <div style="float:left;background-color:hsl(229, 57%, 11%);padding:9px;width:18%;border-radius:8px;margin-top:40px;text-align:center;">
                <img src="~/img/icon-document.svg" />
            </div>
            <div style="float:left;background-color:hsl(229, 57%, 11%);padding:10px;width:20%;border-radius:8px;margin-left:30px;margin-top:41px;">
                <img src="~/img/icon-folder.svg" />
            </div>
            <div style="float:left;background-color:hsl(229, 57%, 11%);padding:10px;width:20%;border-radius:8px;margin-left:30px;margin-top:41px;">
                <img src="~/img/icon-upload.svg" />
            </div>
        </div>
        <div class="sag">

            <h6 style="color:white;margin-left:30px;">You’ve used <b>815 GB </b> of your storage</h6>
            <div class="sagalt2">
            </div>
            <div class="sagalt3">
            </div>

            <h6 style="float:left; color:white;margin-left:30px;margin-top:18px;">0 GB</h6>
            <h6 style="float:left; color:white;margin-left:340px;margin-top:-20px;">1000 GB</h6>
            <div class="sagalt6">
                <i class="fa fa-circle" style="font-size:9px;"></i>
            </div>
        </div>
        <div class="sagust">
            <h4 style="float:left;color:hsl(228, 56%, 26%);padding-top:3px;padding-left:2px;"> <b>1</b></h4>
            <h4 style="float:left;color:hsl(228, 56%, 26%);padding-top:1px;padding-left:2px;"> <b>8</b></h4>
            <h4 style="float:left;color:hsl(228, 56%, 26%);padding-top:3px;padding-left:2px;padding-right:3px;"> <b>5</b></h4>
            <h6 style="float:left;color:hsl(229, 7%, 55%);padding-top:4px;padding-left:5px;"> GB LEFT</h6>
        </div>


    </div>



</body>
</html>